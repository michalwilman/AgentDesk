# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Storage Configuration
# Maximum file size for document uploads in bytes
# Free tier: 52428800 (50MB) | Pro tier: 104857600 (100MB) | Team/Enterprise: higher
SUPABASE_MAX_FILE_SIZE=52428800

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Scraper Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_DEPTH=3
SCRAPER_USER_AGENT=AgentDesk-Bot/1.0

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption Configuration
# Generate a 32-byte (64 hex characters) key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

